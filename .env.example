# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# WebSocket Configuration
WS_PORT=3001

# Redis Configuration (Optional - for distributed setup)
USE_REDIS=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# MongoDB Configuration (Optional - for persistence)
USE_MONGODB=false
MONGODB_URI=mongodb://localhost:27017/crawling-system

# Crawling Configuration
MAX_CONCURRENT_CRAWLERS=10
DEFAULT_TIMEOUT=30000
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36

# Security
CORS_ORIGIN=*
API_KEY=your-secret-api-key

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/crawling-system.log